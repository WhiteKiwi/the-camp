{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2021",
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./lib",
		"baseUrl": "./",
		"incremental": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"paths": {
			"@core/*": ["./src/core/*"],
			"@common/*": ["./src/common/*"]
		},
		// Transform paths in output
		"plugins": [
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	}
}
